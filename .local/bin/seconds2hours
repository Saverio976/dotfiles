#!/usr/bin/env python3
from sys import argv, exit
from datetime import timedelta

def main():
    if len(argv) < 2:
        print("pass one arg")
        exit(1)
    if argv[1] == "-h":
        print("USAGE: exe [-h | seconds]")
        print("convert seconds to days/hours/minutes/seconds")
    print(timedelta(seconds=int(argv[1])))

if __name__ == "__main__":
    main()
